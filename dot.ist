% mendex用の設定
lethead_prefix
"\\hbox to \\linewidth{\\hfill\\sffamily\\bfseries\\gtfamily\\large "
lethead_suffix
"\\hfill}\\par\n\\nopagebreak\n"
lethead_flag       1
