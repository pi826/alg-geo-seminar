preamble
"\\begin{theindex}\n"
postamble
"\n\n\\end{theindex}\n"

item_x0   "\n\\item "
item_x1   "\n \\subitem "
item_x2   "\n  \\subsubitem "

delim_0   ", "
delim_1   ", "
